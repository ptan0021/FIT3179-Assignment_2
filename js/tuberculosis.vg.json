{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Tuberculosis Incidence",
    "width": 1000,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "Year",
        "value": "2018",
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2019,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "layer": [    
      {
        "data": {
          "url": "./js/global.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [{
          "calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"
        }],
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white",
          "strokeWidth": 1
        },
        "encoding": {"tooltip": {"field": "note"}}
      },
      
      {
        "data": { "url": "./data/incidenceOfTuberculosis.csv" },
        "transform": [
          {
            "lookup": "Location",
            "from": {
              "data": {
                "url": "./js/global.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
            "key": "properties.NAME"
            },
            "as": "geo"
          },
          { "filter": "datum.Period == Year" }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color" : {
            "field": "Total",
            "type": "quantitative",
            "scale": {
              "domain": [0, 1000],
              "scheme": "reds"
            }
            
          },
          "tooltip": [
            {"field": "Location", "type": "nominal", "title": "Country"},
            {"field": "Total", "type": "quantitative", "title": "Inicidence"}
          ]
        }
      }
  
    ]
  }