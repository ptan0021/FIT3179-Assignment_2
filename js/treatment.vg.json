{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": null,
  "view": {"fill":"white"},
  "title": {"text":"Tuberculosis Treatment Coverage (%)", "font": "Arial", "fontSize": 22},
  "width": 800,
  "height": 300,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Year",
      "value": "2020",
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [    
    {
      "data": {
        "url": "./js/global.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [{
        "calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"
      }],
      "mark": {
        "type": "geoshape",
        "fill": "#252A34",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    
    {
      "data": { "url": "./data/TB_treatment.csv" },
      "transform": [
        {
          "lookup": "Location",
          "from": {
            "data": {
              "url": "./js/global.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
          "key": "properties.NAME"
          },
          "as": "geo"
        },
        { "filter": "datum.Year == Year" },
        { "calculate": "datum.Effectiveness + '%'", "as": "percentage"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color" : {
          "field": "Effectiveness",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [25, 50, 75],
            "range": ["#d4e8e7", "#aae4e1","#68ddda" ,"#08d9d6"]
          }
        },
        "tooltip": [
          {"field": "ParentLocation", "type": "nominal", "title": "Continent"},
          {"field": "Location", "type": "nominal"},
          {"field": "percentage", "title": "Effectiveness"}
        ]
      }
    }

  ]
}