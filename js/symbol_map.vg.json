{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Country Life Expectancy in 2019",
  "width": 1000,
  "height": 500,
  "data": {
    "url": "js/global.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/lifeExpectancyAtBirth_2019.csv"
        },
        "key": "Location",
        "fields": ["Expectancy"]
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Expectancy",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Expectancy", "type": "quantitative"}
    ]
  }

}